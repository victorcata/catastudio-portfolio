if work.title === ""
    <div class="work work-empty">
        <p>#{work.description}</p>
    </div>
else
    <a class="work" href="#{work.path}">
        <div class="work-logo">
            <span class="#{work.logo}"></span>
        </div>
        <h2>#{work.title}</h2>
        <p class="work-description">#{work.description}</p>
    </a>